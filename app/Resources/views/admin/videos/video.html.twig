{% extends 'admin/base.html.twig' %}

{% block body %}

    <div class="container margin">
        {% for message in app.session.flashBag.get('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Titre du film</th>
                <th>Bandes sons</th>
                <th>Realisateur</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for video in videos %}
                <tr>
                    <td>{{ video.name }}</td>
                    <td>{% for sound in video.sounds %}{{ sound.name }}{% if not loop.last %},&nbsp;{% endif %}{% endfor %}</td>
                    <td>{{ video.realisateur }}</td>
                    <td>{{ video.description }}</td>
                    <td>
                        <a href="" class="btn btn-primary" role="button">Editer</a>
                        <form method="POST" action="">
                            <button type="submit"  class="btn btn-danger" role="button">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}